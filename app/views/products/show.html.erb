<h1><%=@product.title%> </h1>
<%= image_tag @product.photo, width: 200 if @product.photo.attached?%>

<h2><%=@product.description%> </h2>


<span><%=@product.price%> </span>
<%= link_to t('.action1'), edit_product_path(@product)%>
<%= link_to t('.action2'), product_path(@product), data: {
turbo_method: :delete,
turbo_confirm: t('.confirm')
}%>
